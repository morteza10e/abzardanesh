<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="rtl"

    android:background="@color/white">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginStart="18dp"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اتصال به اینترنت"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
       />

    <ImageView
        android:id="@+id/imageItemVideo"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:src="@drawable/wifi"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:textColor="@color/black"

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="22sp"
        android:text="به اینترنت متصل نیستید. برای استفاده از اپلیکیشن به اینترنت متصل شوید."
        android:textSize="18dp"
        />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:orientation="horizontal">

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btnWifi"
           android:layout_weight="0.5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/tv_title"
           android:background="@drawable/bg_splash"
           android:text=" اینترنت WIFI "
           android:textColor="@color/white"
           android:textSize="18sp"
           android:textStyle="bold"
           android:layout_marginEnd="5dp"
           android:layout_marginStart="5dp"
           />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btnMobile"
           android:layout_weight="0.5"
           android:layout_marginEnd="5dp"
           android:layout_marginStart="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingStart="5dp"
           android:layout_toEndOf="@+id/btnWifi"
           android:background="@drawable/bg_white"
           android:layout_marginBottom="30dp"
           android:text=" اینترنت موبایل"
           android:textColor="@color/bluePoor"
           android:textSize="18sp"
           android:textStyle="bold"
           />
   </LinearLayout>

</LinearLayout>