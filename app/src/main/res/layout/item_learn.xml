<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="12dp"
    android:layout_marginBottom="22sp"
    android:layout_height="150dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="40dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageItemLearn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/student" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageItemLearn"
            android:layout_marginTop="10dp"
            android:textCursorDrawable="@drawable/bg_splash"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#5867BC"
            app:layout_constraintEnd_toEndOf="@+id/imageItemLearn"
            app:layout_constraintStart_toStartOf="@+id/imageItemLearn"
            app:layout_constraintTop_toBottomOf="@+id/imageItemLearn"
            tools:text="۵۷,۷۰۳ نفر" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_text"
            app:layout_constraintEnd_toEndOf="@+id/tv_text"
            app:layout_constraintStart_toStartOf="@+id/tv_text"
            app:layout_constraintTop_toBottomOf="@+id/tv_text"
            tools:text="تعداد دانشجو" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>